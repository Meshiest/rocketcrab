{
    "name": "rocketcrab",
    "version": "0.0.1",
    "author": "Tanner Krewson",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon",
        "build": "run-s build:client build:server",
        "build:client": "next build",
        "build:server": "tsc --project tsconfig.server.json",
        "start": "cross-env NODE_ENV=production node dist/server/index.js",
        "type-check": "tsc --pretty --noEmit",
        "format": "prettier --write **/*.{js,ts,tsx,json,yml,md}",
        "lint": "eslint . --ext ts --ext tsx --ext js",
        "lint:staged": "lint-staged",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:all": "run-s lint type-check test",
        "test:coverage": "jest --coverage"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s lint:staged type-check test"
        }
    },
    "lint-staged": {
        "*.@(js|ts|tsx|json|md)": [
            "npm run lint",
            "npm run format"
        ]
    },
    "dependencies": {
        "@geist-ui/react": "^2.0.3",
        "body-parser": "^1.19.0",
        "cross-env": "^7.0.3",
        "dexie": "^3.0.3",
        "express": "^4.17.1",
        "fontsource-inconsolata": "^3.0.5",
        "fontsource-mukta": "^3.0.5",
        "fslightbox-react": "^1.6.0",
        "next": "^10.0.3",
        "next-pwa": "^3.1.5",
        "nookies": "^2.5.0",
        "phonetic-alphabet-converter": "^1.0.0",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "react-ga": "^3.3.0",
        "react-ios-pwa-prompt": "^1.8.4",
        "react-markdown": "^5.0.3",
        "react-spinners-kit": "^1.9.1",
        "socket.io": "^3.0.3",
        "socket.io-client": "^3.0.3",
        "sweetalert2": "^10.12.6",
        "swiper": "^6.3.5",
        "uuid": "^8.3.1",
        "ws": "^7.4.1"
    },
    "devDependencies": {
        "@testing-library/react": "^11.2.2",
        "@types/express": "^4.17.9",
        "@types/jest": "^26.0.16",
        "@types/node": "^14.14.10",
        "@types/react": "^17.0.0",
        "@types/socket.io": "^2.1.11",
        "@types/testing-library__react": "^10.2.0",
        "@types/webpack-env": "^1.16.0",
        "@types/ws": "^7.4.0",
        "@typescript-eslint/eslint-plugin": "^4.9.0",
        "@typescript-eslint/parser": "^4.9.0",
        "babel-jest": "^26.6.3",
        "eslint": "^7.15.0",
        "eslint-config-prettier": "^7.0.0",
        "eslint-plugin-react": "^7.21.5",
        "husky": "^4.3.4",
        "jest": "^26.6.3",
        "jest-watch-typeahead": "^0.6.1",
        "lint-staged": "^10.5.3",
        "nodemon": "^2.0.6",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.2.1",
        "ts-node": "^9.1.0",
        "typescript": "^4.1.2"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tannerkrewson/rocketcrab.git"
    },
    "bugs": {
        "url": "https://github.com/tannerkrewson/rocketcrab/issues"
    },
    "homepage": "https://github.com/tannerkrewson/rocketcrab#readme"
}
