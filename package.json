{
    "name": "rocketcrab",
    "version": "0.0.1",
    "author": "Tanner Krewson",
    "license": "MIT",
    "scripts": {
        "dev": "nodemon",
        "build": "run-s build:client build:server",
        "build:client": "next build",
        "build:server": "tsc --project tsconfig.server.json",
        "start": "cross-env NODE_ENV=production node dist/index.js",
        "type-check": "tsc --pretty --noEmit",
        "format": "prettier --write **/*.{js,ts,tsx,json}",
        "lint": "eslint . --ext ts --ext tsx --ext js",
        "lint:staged": "lint-staged",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:all": "run-s lint type-check test"
    },
    "husky": {
        "hooks": {
            "pre-commit": "run-s lint:staged type-check test"
        }
    },
    "lint-staged": {
        "*.@(js|ts|tsx|json)": [
            "npm run lint",
            "npm run format"
        ]
    },
    "dependencies": {
        "@zeit-ui/react": "^1.8.0-canary.5",
        "body-parser": "^1.19.0",
        "cross-env": "^7.0.2",
        "express": "^4.17.1",
        "fontsource-inconsolata": "^2.1.4",
        "next": "^9.4.4",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "socket.io": "^2.3.0"
    },
    "devDependencies": {
        "@testing-library/react": "^10.4.5",
        "@types/jest": "^26.0.4",
        "@types/node": "^14.0.22",
        "@types/react": "^16.9.43",
        "@types/socket.io": "^2.1.8",
        "@types/testing-library__react": "^10.2.0",
        "@typescript-eslint/eslint-plugin": "^3.6.0",
        "@typescript-eslint/parser": "^3.6.0",
        "babel-jest": "^26.1.0",
        "eslint": "^7.4.0",
        "eslint-config-prettier": "^6.11.0",
        "eslint-plugin-react": "^7.20.3",
        "husky": "^4.2.5",
        "jest": "^26.1.0",
        "jest-watch-typeahead": "^0.6.0",
        "lint-staged": "^10.2.11",
        "nodemon": "^2.0.4",
        "npm-run-all": "^4.1.5",
        "prettier": "^2.0.5",
        "ts-node": "^8.10.2",
        "typescript": "3.8.3"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/tannerkrewson/rocketcrab.git"
    },
    "bugs": {
        "url": "https://github.com/tannerkrewson/rocketcrab/issues"
    },
    "homepage": "https://github.com/tannerkrewson/rocketcrab#readme"
}
